<Application x:Class="CycleCity_6.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tools="clr-namespace:CycleCity_6.Tools"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <tools:ViewModelLocator x:Key="ViewModelLocator" />
        <!-- Button Style-->
        <Style TargetType="{x:Type Button}" x:Key="Monate">
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="60" />
            <Setter Property="Background" Value="PowderBlue" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontFamily" Value="Segoe UI Black" />
            <!-- TODO eigentlich sollte es kein MousOver mehr geben
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Aqua"/>
                </Trigger>
            </Style.Triggers>-->
        </Style>

        <Style TargetType="{x:Type CheckBox}" x:Key="ModifiedCheckBox">
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
            <Setter Property="FontSize" Value="15" />

        </Style>

    </Application.Resources>
</Application>
